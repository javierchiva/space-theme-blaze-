<h1>{{ article.title }}</h1>

{% if section.settings.enable_autor %}
  <small>{{ article.author }}</small>
{% endif %}

{% if section.settings.enable_published_date %}
  <time datetime="{{ article.published_at | date: '%Y-%m-%d' }}">
    {{ article.published_at | date: '%d-%m-%Y' }}
  </time>
{% endif %}



<img src="{{ article.image | img_url: 'large' }}" alt=" {{ article.image.alt }} ">

<div class="">
  {{ article.content }}
</div>


{% schema %}
  {
    "name": "Template Article",
    "settings": [
      {
        "type": "checkbox",
        "id": "enable_autor",
        "default": true,
        "label": "Display Author Name"
      }, {
        "type": "checkbox",
        "id": "enable_published_date",
        "default": true,
        "label": "Display Published Date"

      }
    ],
    "blocks": [
      {
        "type": "article_title",
        "name": "Title",
        "limit": 1
      },
      {
        "type": "article_author",
        "name": "Author",
        "limit": 1
      },
      {
        "type": "article_publishied_date",
        "name": "Publised Date",
        "Limit": 1
      },
      {
        "type": "featured_image",
        "name": "Thumbnail",
        "limit": 1
      }, {
        "type": "article_content",
        "name": "Content",
        "limit": 1
      }
    ]
  }
{% endschema %}