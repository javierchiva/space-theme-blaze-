<div class="px-4 py-8">
  {% paginate collection.products by 6 %}
    <h1 class="text-3xl text-center">{{ product.featured_image.alt }}</h1>
  <div class="max-w-6xl mx-auto">
        <div class="grid grid-cols-1 md:grid-cols-3 gap-4">
            {% for product in collection.products %}
              <div class="w-full py-6 px-3">
                 <div class="border bg-white shadow-lg rounded-lg overflow-hidden">
                    <a href="{{ product.featured_image }}">
                       {% if product.featured_image %}
                       <div class="h-80 overflow-hidden">
                         <img class="h-80 overflow-hidden" src="{{ product.featured_image | img_url: 'medum' }}" alt="{{ product.featured_image}}">
                        </div>
                          {% endif %}
                       </a>
                        <span class="text-sm">{{ product.vendor }}</span>
                          <a href=" {{ product.url }}" class="text-gray-700 uppercase" >
                          {{ product.title }}  </a>
                          <p>{{ product.price | money }}</p>
                    </div>
                 </div>
             {% else %}
            <p>There are no producs inside of this collections</p>
          {% endfor %}
        </div>
    </div>
 {% render 'pagination', pagination: paginate %}
 {% endpaginate %}
</div>

 